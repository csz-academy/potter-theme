{
  "name": "potter-theme",
  "version": "0.1.0",
  "main": "gulpfile.babel.js",
  "scripts": {
    "report": "lighthouse http://127.0.0.1:4000",
    "format": "prettier . --check --write",
    "jekyll:dev": "bundle exec jekyll serve --incremental --watch",
    "jekyll:build": "bundle exec jekyll build",
    "build:production": "npx tailwindcss -i ./src/style.css -o ./assets/css/potter/main.css --minify",
    "build:dev": "npx tailwindcss -i ./src/style.css -o ./assets/css/potter/main.css --watch",
    "build": "npm run build:production",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Jekyll,Tailwind\" -c \"green.bold,cyan.bold\" \"npm run jekyll:dev\" \"npm run build:dev\""
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^7.0.0",
    "lighthouse": "^9.2.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.12"
  }
}
